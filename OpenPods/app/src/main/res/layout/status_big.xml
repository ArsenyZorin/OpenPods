<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:gravity="center"
    android:background="@color/white"
    >


<!-- PowerBeats Pro -->
	
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/leftPowerBeats"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:src="@drawable/left_powerbeats"
            android:id="@+id/leftPowerBeatsImg"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftPowerBeatsImg"
            android:gravity="center"
            android:text="100%+"
            android:id="@+id/leftPowerBeatsText"
            android:textColor="@color/black"
            />

        <ProgressBar
            android:id="@+id/leftPowerBeatsUpdating"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_below="@id/leftPowerBeatsImg"
            android:gravity="center"
            android:indeterminate="true"
             />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightPowerBeats"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/leftPowerBeats">

        <ImageView
            android:id="@+id/rightPowerBeatsImg"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/right_powerbeats" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rightPowerBeatsImg"
            android:gravity="center"
            android:text="100%+"
            android:id="@+id/rightPowerBeatsText"
            android:textColor="@color/black"
            />

        <ProgressBar
            android:id="@+id/rightPowerBeatsUpdating"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_below="@id/rightPowerBeatsImg"
            android:gravity="center"
            android:indeterminate="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/PowerBeatsCase"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/rightPowerBeats">

        <ImageView
            android:id="@+id/PowerBeatsCaseImg"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/powerbeats_case" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PowerBeatsCaseImg"
            android:gravity="center"
            android:text="100%+"
            android:id="@+id/PowerBeatsCaseText"
            android:textColor="@color/black"
            />

        <ProgressBar
            android:id="@+id/PowerBeatsCaseUpdating"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_below="@id/PowerBeatsCaseImg"
            android:gravity="center"
            android:indeterminate="true"
            />

    </RelativeLayout>


</RelativeLayout>
